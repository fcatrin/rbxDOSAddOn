<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="xtvapps.dosbox.swos"  
      android:versionCode="221032"
      android:versionName="2.2.1-32"
      android:installLocation="internalOnly"
      > 
    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="23"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="com.android.vending.CHECK_LICENSE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="xtvapps.retrobox.dosbox_provider.CONTENT"/> 
    <supports-screens android:xlargeScreens="true"/>
    <application 
        android:icon="@drawable/ic_game" 
		android:hardwareAccelerated="true"
		android:launchMode="singleInstance"
		android:banner="@drawable/ic_game_tv"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme">
         <activity android:name="xtvapps.retrobox.dosbox.wrapper.GameLauncher"
            android:screenOrientation="sensorLandscape"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="tv.ouya.intent.category.GAME" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
             
         </activity>
        <activity android:name="xtvapps.retrobox.dosbox.DosBoxLauncher"
                  android:label="@string/app_name"
                  android:screenOrientation="sensorLandscape" 
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="retrobox.v2.dosbox" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain"/>
            </intent-filter>
            </activity>
        <activity android:label="@string/app_name" android:name="xtvapps.retrobox.v2.dosbox.library.dosboxprefs.DosBoxPreferences"></activity>
    </application>
</manifest> 
